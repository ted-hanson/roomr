<!DOCTYPE html>
<html>
<head>
  <title>Roomr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1">
</head>
<body class="<%= @body_class %>">
  <% unless current_user.nil? %>
  <header>
      <div id="menu_nav_button"><div></div></div>
      <a class="header-logo" href="/"><%= image_tag "header-logo@2x.png" %></a>
  </header>
  <div class="navigation" id="nav">
    <a href="/listings/view_searchers">matches</a>
    <%= link_to 'edit profile', :controller=>"users", :action =>'edit', :id =>current_user.id %>

    <a href="javascript:;">edit listing</a>
    <a href="javascript:;">edit interested</a>
    <a href="javascript:;">switch to viewer</a>
    <a class="link-logout" href="javascript:;">log out</a>
  </div> 
  <% end %> 

  <%= yield %>



</body>
</html>
