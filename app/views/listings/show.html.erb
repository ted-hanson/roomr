<div class='map'>
	<div class='map-label'>map</div>
	<div>
	<%= content_tag("iframe", "", width: "100%", height: "200", frameborder: "0", style: "border:0", src: "https://www.google.com/maps/embed/v1/search?key=AIzaSyA8JSgaF2Y7HhHhCHS5IOIzDItv93BGxyE&q=" + @listing.neighborhood)
	%>
	</div>
</div>
<div class='description'>
	<div class='description-label'>description</div>
	<%= content_tag(:div, @listing.description) %>
</div>
<% if current_user.id != @listing.user_id %>
<div class='match-grade-wrapper'>
	<span class='match-grade-label'>Match grade: </span>
  <span id='match-grade'><%= @listing.match_grade %></span>
</div>
<% end %>
<div class='about-us-roomrs'>
	<% @roomrs.each do |roomr| %>
		<div class='roomr'>
			<div class='roomr-profile img-wrapper'>
				<script>
        //$(".add-image-button").click(function() {
          var imgs = [
          "http://i.imgur.com/YDTC6Wy.png",
          "http://i.imgur.com/mW7uZvB.png",
          "http://i.imgur.com/ZKesFlt.png",
          "http://i.imgur.com/KaxHOzo.png",
          "http://i.imgur.com/Ep5DbKQ.png",
          "http://i.imgur.com/OBxy9dd.png",
          "http://i.imgur.com/IkW3z97.png",
          "http://i.imgur.com/mFpfkqj.png",
          "http://i.imgur.com/58oLiGX.png",
          "http://i.imgur.com/tPUyGqS.png"
          ];
          var imgsrc = imgs[Math.floor(Math.random()*imgs.length)];

          // var imgsrc = "http://i.imgur.com/VTApdhw.jpg";
          $(".roomr-profile img").remove();
          $(".roomr-profile").append("<img src='" + imgsrc + "'>");
        //});
        </script>
			</div>

			<div class='roomr-details'>
				<div class='roomr-name'><%= roomr.first_name + " " + roomr.last_name %></div>
				<div class='roomr-description'><%= roomr.interests %></div>
			</div>
		</div>
	<% end %>
</div>
<% if current_user.id != @listing.user_id %>
<div class='interested-buttons'>  
  <%= link_to :action =>'interested', :id =>@listing.id  do %>
    <span class='interested call-to-action'>interested</span>
  <% end %>
  <%= link_to :action =>'notinterested', :id =>@listing.id  do %>
  	<span class='notinterested'>not interested</span>
  <% end %>  
<% end %>
