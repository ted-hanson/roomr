<div class='title'><%= @listing.title %></div>
<div class='gallery'>
	<div class='main-image'>
		<div class='img-wrapper'><%= image_tag(@photos[0])%></div>
	</div>
	<div class='thumbnails'>
		<% @photos.each do |image_uri| %>
			<div class='img-wrapper'><%= image_tag(image_uri)%></div>
		<% end %>
	</div>
</div>
<div class='map'>
	<div class='neighborhood'><%= @listing.neighborhood %></div>
	<%= image_tag("http://fc02.deviantart.net/fs70/i/2013/111/f/5/halo_reach_wallpaper_by_aro_by_aroart-d62gx5e.jpg") %>
</div>
<div class='description'>
	<%= content_tag(:div, @listing.description) %>
</div>

<% if current_user.id != @listing.user_id %>
<div class='match-grade-wrapper'>
	<span class='match-grade-label'>Match grade</span>
  <span id='match-grade'>F</span>
</div>
<% end %>
<div class=''>  
  
</div>
<div class='interested-buttons'>
  
  <%= link_to :action =>'notinterested', :id =>@listing.id  do %>
  <span>Not Interested</span>
  <% end %>
  <%= link_to :action =>'interested', :id =>@listing.id  do %>
    <span>Interested</span>
  <% end %>
</div>
