<div class='listing-header'>
  <a href='/map' style="color:#79bd4b;margin:10px;">View All Listings on Map</a>
	<div class='title' style="max-width: 75%;">
		<div><%= @listing.title %></div>
		<div class='neighborhood'><%= @listing.neighborhood %></div>
	</div>
	<div class='price'>
		<div class='price-dollars'>$<%= @listing.price %></div>
		<div class='price-per-unit'>month</div>
	</div>
</div>
