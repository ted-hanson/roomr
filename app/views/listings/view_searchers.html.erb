<h1 style="text-align: center; margin: 10px;">People Interested in Your Room!</h1>

<% if @interested_users.blank? %>
<p>No users are currently interested</p>

<% else %>
    <ul id="interested-users">
    <% @interested_users.each do |user| %>
    <li>
      <%= link_to :controller=>"users", :action =>'show', :id => user.id do -%>
      <%= image_tag(user.photo)%>
      <div>
      <div><%= user.first_name -%> <%= user.last_name -%></div>
      <div>Occupation: <span class="green-value"><%= user.occupation -%></span></div>
      </div>
      <% end %>
    </li>
    <% end %>
</ul>
<% end %>