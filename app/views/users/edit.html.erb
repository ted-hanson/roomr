<div class="main-content">
  <%= form_for @user do |f| %>
    <p class="frm-item">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>
    <p class="frm-item">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>
    <p class="frm-item">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>
    <div class="frm-col2 frm-item">
      <label>birth month &amp; year</label>
      <div class="col">
        <%= f.select :birthday_month, ["January","February","March","April","May","June","July","August","September","October","November","December"], {:include_blank => true,:selected=>"Jun"} %>
      </div>
      <div class="col">
        <%= f.select :birthday_year, [1996,1995,1994,1993,1992,1991,1990,1989,1988,1987,1986,1985,1984,1983,1982,1981], {:selected=>"1990"} %>
      </div>
    </div>
    <p class="frm-item">
      <%= f.label :gender, "gender preference" %>
      <%= f.select :gender, ["male","female"] %>
    </p>
    <p class="frm-item">
      <%= f.label :photo %>
      <%= f.text_field :photo %>
    </p>
    <p class="frm-item">
      <%= f.label :occupation %>
      <%= f.text_field :occupation %>
    </p>
    <p class="frm-item">
      <%= f.label :interests,"little bit about yourself" %>
      <%= f.text_area :interests %>
    </p>
    <p class="frm-item align-center">
      <%= f.submit "Submit",:style => "display:none;",:id=>"btn_submit" %>
      <a href="javascript:document.getElementById('btn_submit').click();" class="button">Submit</a>
    </p>
  <% end %>
</div>
